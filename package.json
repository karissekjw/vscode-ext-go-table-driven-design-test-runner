{
  "name": "go-table-driven-design-test-runner",
  "publisher": "KarisseKhoo",
  "icon": "images/logo.png",
  "displayName": "Go Table-Driven-Design Test Runner",
  "description": "This VSCode extension enables the following key bindings to run and debug Go table-driven design tests.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "author": {
    "name": "Karisse Khoo"
  },
  "keywords": ["go", "test", "tdd", "table-driven-design"],
  "categories": [
    "Testing",
    "Debuggers"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goTDDRunner.runTest",
        "title": "Run Go Subtest"
      },
      {
        "command": "goTDDRunner.debugTest",
        "title": "Debug Go Subtest"
      },
      {
        "command": "goTDDRunner.runTestFunction",
        "title": "Run Go Test Function"
      }
    ],
    "keybindings": [
      {
        "command": "goTDDRunner.runTest",
        "key": "cmd+j",
        "when": "editorLangId == go"
      },
      {
        "command": "goTDDRunner.debugTest",
        "key": "cmd+shift+j",
        "when": "editorTextFocus && editorLangId == 'go'"
      },
      {
        "command": "goTDDRunner.runTestFunction",
        "key": "cmd+u",
        "when": "editorLangId == go"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "bugs": {
    "url": "https://github.com/karissekjw/vscode-ext-go-table-driven-design-test-runner/issues",
    "email": "karissekhoojw@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karissekjw/vscode-ext-go-table-driven-design-test-runner.git"
  },
  "homepage": "https://github.com/karissekjw/vscode-ext-go-table-driven-design-test-runner/blob/main/README.md"
}